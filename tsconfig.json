{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "build",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,  /* Allow default imports from modules with no default export. This does not affect code emit, just typechecking. */
    "esModuleInterop": true,  
  },
  "include": [
    "server/**/*.ts",
    "server/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "buildOnSave": true,
  "compileOnSave": true
}